<center>
  <h1>Login</h1>
</center>

<%= form_with(class: "row g-3", url: login_path) do |form| %>
    <div class="mb-3">
        <%= form.label :email %>
        <label for="inputEmail4" class="form-label"></label>
        <%= form.text_field :email, class: "form-control", placeholder: "Email Address" %>
    </div>

    <div class="mb-3">
        <%= form.label :password %>
        <label for="inputPassword4" class="form-label"></label>
        <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="col-12">
        <div class="mb-3">
        <%= form.submit "Login", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>